{
  "skipLibCheck": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": false,
    "jsx": "react",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "esnext",
    "types": [
      "react",
      "react-native",
      "jest",
      "react-dom",
      "react-redux",
      "react-router-dom",
      "react-router-native"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
